<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.Hyperlink?>
<AnchorPane fx:controller="com.example.childrentracking.Controllers.AccountCreateController" prefHeight="600.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <style>
        -fx-background-color: linear-gradient(to bottom right, #FF6F91, #D86DD7);
    </style>

    <VBox alignment="CENTER" AnchorPane.topAnchor="100" AnchorPane.bottomAnchor="100"
          AnchorPane.leftAnchor="100" AnchorPane.rightAnchor="100" spacing="20">
        <style>
            -fx-background-color: #2A2E43;
            -fx-background-radius: 20;
            -fx-padding: 20;
        </style>
        <effect>
            <DropShadow color="#00000050" radius="10" />
        </effect>

        <Label alignment="CENTER" text="TẠO TÀI KHOẢN">
            <font>
                <Font name="System Bold" size="24" />
            </font>
            <style>
                -fx-text-fill: #FF6F91;
            </style>
        </Label>

        <TextField fx:id="username" promptText="Tên tài khoản" style="-fx-background-color: #3B3F5A; -fx-text-fill: white; -fx-background-radius: 10; -fx-prompt-text-fill: #A0A0A0;" />
        <TextField fx:id="password" promptText="Mật khẩu" style="-fx-background-color: #3B3F5A; -fx-text-fill: white; -fx-background-radius: 10; -fx-prompt-text-fill: #A0A0A0;" />
        <TextField fx:id="email" promptText="Email" style="-fx-background-color: #3B3F5A; -fx-text-fill: white; -fx-background-radius: 10; -fx-prompt-text-fill: #A0A0A0;" />
        <TextField fx:id="phonenumber" promptText="Số điện thoại" style="-fx-background-color: #3B3F5A; -fx-text-fill: white; -fx-background-radius: 10; -fx-prompt-text-fill: #A0A0A0;" />

        <HBox alignment="CENTER" spacing="20">
            <Button fx:id="ButtonSignUp" prefWidth="100" text="Đăng kí">
                <style>
                    -fx-background-color: linear-gradient(to right, #FF6F91, #D86DD7);
                    -fx-text-fill: white;
                    -fx-font-weight: bold;
                    -fx-background-radius: 20;
                </style>
            </Button>
            <Button fx:id="ButtonReset" prefWidth="100" text="RESET">
                <style>
                    -fx-background-color: linear-gradient(to right, #FF6F91, #FF9A8B);
                    -fx-text-fill: white;
                    -fx-font-weight: bold;
                    -fx-background-radius: 20;
                </style>
            </Button>
        </HBox>
        <Hyperlink fx:id="LoginLink" text="Đã có tài khoản? Đăng nhập ngay"/>
    </VBox>

    <Pane AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" prefHeight="100">
        <style>
            -fx-background-color: transparent;
        </style>
        <Pane prefHeight="100" prefWidth="400">
            <style>
                -fx-background-color: #FF9A8B;
                -fx-background-radius: 100 100 0 0;
                -fx-opacity: 0.7;
            </style>
        </Pane>
        <Pane layoutX="50" layoutY="20" prefHeight="80" prefWidth="400">
            <style>
                -fx-background-color: #D86DD7;
                -fx-background-radius: 100 100 0 0;
                -fx-opacity: 0.7;
            </style>
        </Pane>
    </Pane>
</AnchorPane>