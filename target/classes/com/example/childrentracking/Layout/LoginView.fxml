<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:controller="com.example.childrentracking.Controllers.LoginController" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <style>
        -fx-background-color: linear-gradient(to bottom right, #FF6F91, #D86DD7);
    </style>

    <VBox alignment="CENTER" AnchorPane.topAnchor="50" AnchorPane.bottomAnchor="100"
          AnchorPane.leftAnchor="200" AnchorPane.rightAnchor="200" spacing="20">
        <style>
            -fx-background-color: #2A2E43;
            -fx-background-radius: 20;
            -fx-padding: 30;
        </style>
        <effect>
            <DropShadow color="#00000050" radius="10" />
        </effect>

        <ImageView fitHeight="80" fitWidth="80" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../Images/appicon.png" />
            </image>
        </ImageView>

        <Label text="UlTrack" style="-fx-text-fill: #FF6F91;">
            <font>
                <Font name="System Bold" size="24" />
            </font>
        </Label>

        <Label text="Track Your Journey" style="-fx-text-fill: #A0A0A0;">
            <font>
                <Font size="12" />
            </font>
        </Label>

        <Label text="XIN CHÀO" style="-fx-text-fill: #FF6F91;">
            <font>
                <Font name="System Bold" size="14" />
            </font>
        </Label>

        <TextField fx:id="usernametext" promptText="Nhập Tên Đăng Nhập"
                   style="-fx-background-color: #3B3F5A; -fx-text-fill: white; -fx-background-radius: 10; -fx-prompt-text-fill: #A0A0A0;" />

        <PasswordField fx:id="passwordtext" promptText="Nhập Mật Khẩu"
                       style="-fx-background-color: #3B3F5A; -fx-text-fill: white; -fx-background-radius: 10; -fx-prompt-text-fill: #A0A0A0;" />

        <HBox alignment="CENTER_LEFT" spacing="10">
            <CheckBox fx:id="rememberme" text="Ghi nhớ đăng nhập" style="-fx-text-fill: #A0A0A0;" />
            <Hyperlink fx:id="forgetpassword" text="Quên mật khẩu" style="-fx-text-fill: #FF6F91;" />
        </HBox>

        <Button fx:id="loginbutton" text="Đăng nhập"
                style="-fx-background-color: linear-gradient(to right, #FF6F91, #D86DD7); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20;" />

        <Button fx:id="loginbuttonwithgoogle" text="Đăng nhập với Google"
                style="-fx-background-color: linear-gradient(to right, #FF6F91, #FF9A8B); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20;" />

        <Hyperlink fx:id="createnewaccount" text="Tạo tài khoản mới" style="-fx-text-fill: #FF6F91;" />
    </VBox>

    <Pane AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" prefHeight="100">
        <style>
            -fx-background-color: transparent;
        </style>
        <Pane prefHeight="100" prefWidth="800">
            <style>
                -fx-background-color: #FF9A8B;
                -fx-background-radius: 100 100 0 0;
                -fx-opacity: 0.7;
            </style>
        </Pane>
        <Pane layoutX="50" layoutY="20" prefHeight="80" prefWidth="800">
            <style>
                -fx-background-color: #D86DD7;
                -fx-background-radius: 100 100 0 0;
                -fx-opacity: 0.7;
            </style>
        </Pane>
    </Pane>
</AnchorPane>