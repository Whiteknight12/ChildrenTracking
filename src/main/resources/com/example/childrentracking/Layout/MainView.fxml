<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane fx:controller="com.example.childrentracking.Controllers.MainViewController"
            stylesheets="@../css_stylings/SideBar.css"
            xmlns:fx="http://javafx.com/fxml"
            styleClass="sidebar"
            prefWidth="800" prefHeight="600">
    <left>
        <VBox spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <Button text="Trang chủ" onAction="#handleHome" maxWidth="Infinity" styleClass="sidebar-button"/>
            <Button text="Báo cáo" onAction="#handleReport" maxWidth="Infinity" styleClass="sidebar-button"/>
            <Button text="Schedule" onAction="#handleSchedule" maxWidth="Infinity" styleClass="sidebar-button"/>
            <Button text="Tài khoản" onAction="#handleAccount" maxWidth="Infinity" styleClass="sidebar-button"/>
            <Button text="Cài đặt" onAction="#handleSettings" maxWidth="Infinity" styleClass="sidebar-button"/>
            <Button text="Đăng xuất" onAction="#handleLogout" maxWidth="Infinity" styleClass="sidebar-button"/>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentArea" style="-fx-background-color: #ecf0f1"/>
    </center>
</BorderPane>
